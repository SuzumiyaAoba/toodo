{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "ignore": ["*.spec.ts"],
    "rules": {
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "files": {
    "ignore": [".github/**", "docs/**", "prisma", "src/generated/**", "**/dist/**"]
  }
}
