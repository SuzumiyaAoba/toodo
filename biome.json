{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "off" },
			"style": { "noNonNullAssertion": "off" }
		}
	},
	"files": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			".turbo/**",
			"coverage/**",
			".next/**"
		]
	},
	"formatter": { "enabled": true },
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
